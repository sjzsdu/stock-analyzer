# ==================== API Configuration ====================

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# ==================== CORS Configuration ====================

# Comma-separated list of allowed origins
CORS_ALLOW_ORIGINS=*

# ==================== Data Collection Configuration ====================

# Maximum retry attempts for data collection
COLLECT_MAX_RETRIES=3

